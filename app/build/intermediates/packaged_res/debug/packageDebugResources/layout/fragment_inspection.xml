<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:fillViewport="true"
    android:padding="16dp"
    tools:context=".fragments.InspectionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Date Display -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/primary_blue"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/dateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Date"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Form Fields -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Project Dropdown -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="@string/project"
                    app:boxStrokeColor="@color/accent_red"
                    app:hintTextColor="@color/accent_red"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerProject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:dropDownItemStyle="@style/SpinnerItemStyle" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Custom Project Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCustomProject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Custom Project Name"
                    android:visibility="gone"
                    app:boxStrokeColor="@color/accent_red"
                    app:hintTextColor="@color/accent_red"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCustomProject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="50" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Municipality Dropdown -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilMunicipality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Municipality"
                    app:boxStrokeColor="@color/accent_red"
                    app:hintTextColor="@color/accent_red"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerMunicipality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:dropDownItemStyle="@style/SpinnerItemStyle" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Custom Municipality Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCustomMunicipality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Custom Municipality Name"
                    android:visibility="gone"
                    app:boxStrokeColor="@color/accent_red"
                    app:hintTextColor="@color/accent_red"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCustomMunicipality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="50" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Row with OLT and FSA -->
                <LinearLayout
                    android:id="@+id/llOltFsaContainer" 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilOlt" 
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="@string/olt"
                        app:boxStrokeColor="@color/accent_red"
                        app:hintTextColor="@color/accent_red"
                        app:counterEnabled="true"
                        app:counterMaxLength="50"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etOlt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="50" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilFsa"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:hint="@string/fsa"
                        app:boxStrokeColor="@color/accent_red"
                        app:hintTextColor="@color/accent_red"
                        app:counterEnabled="true"
                        app:counterMaxLength="50"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etFsa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="50" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- AS-BUILT -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="@string/as_built"
                    app:boxStrokeColor="@color/accent_red"
                    app:hintTextColor="@color/accent_red"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAsBuilt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="50" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Inspection Type Dropdown -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="@string/inspection_type"
                    app:boxStrokeColor="@color/accent_red"
                    app:hintTextColor="@color/accent_red"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerInspectionType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:dropDownItemStyle="@style/SpinnerItemStyle" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Equipment ID/TYPE -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="@string/equipment_id_type"
                    app:boxStrokeColor="@color/accent_red"
                    app:hintTextColor="@color/accent_red"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEquipmentId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="50" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Address -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="@string/address"
                    app:boxStrokeColor="@color/accent_red"
                    app:hintTextColor="@color/accent_red"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="50" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Drawing -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="@string/drawing"
                    app:boxStrokeColor="@color/accent_red"
                    app:hintTextColor="@color/accent_red"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDrawing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="50" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Observations -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="@string/observations"
                    app:boxStrokeColor="@color/accent_red"
                    app:hintTextColor="@color/accent_red"
                    app:counterEnabled="true"
                    app:counterMaxLength="100"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etObservations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="100"
                        android:maxLines="3"
                        android:minLines="2" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Status Dropdown -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Status"
                    app:boxStrokeColor="@color/accent_red"
                    app:hintTextColor="@color/accent_red"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerFilterStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:dropDownItemStyle="@style/SpinnerItemStyle" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Photo Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/photos"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_red"
                    android:layout_marginBottom="12dp" />

                <!-- Photo Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectPicture"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/select_picture"
                        android:backgroundTint="@color/primary_blue"
                        app:icon="@drawable/ic_gallery"
                        app:iconGravity="textStart" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDeletePicture"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"

                        android:text="Delete"
                        android:backgroundTint="@color/accent_red"
                        app:icon="@android:drawable/ic_menu_delete"
                        app:iconGravity="textStart" />

                </LinearLayout>

                <!-- Photo RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/photoRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        
        <!-- Button Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/save_inspection"
                android:textSize="16sp"
                android:backgroundTint="@color/primary_blue"
                app:icon="@drawable/ic_save"
                app:iconGravity="textStart"
                android:padding="16dp" />

            <!-- Clear Form Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClearForm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/clear_form"
                android:textSize="16sp"
                android:backgroundTint="@color/accent_red"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconGravity="textStart"
                android:padding="16dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>